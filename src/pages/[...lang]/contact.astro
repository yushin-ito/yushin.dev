---
import ContactForm from "@/components/ContactForm";
import SiteFooter from "@/components/SiteFooter.astro";
import SiteHeader from "@/components/SiteHeader.astro";
import Layout from "@/layouts/Layout.astro";
import { m } from "@/paraglide/messages";

export const getStaticPaths = () => {
	return [{ params: { lang: undefined } }, { params: { lang: "en" } }];
};
---

<Layout
	title={`${m.page_contact_metadata_title()} | yushin.dev`}
	description={m.page_contact_metadata_description()}
>
	<SiteHeader slot="header"/>
	<section class="container max-w-5xl py-6 md:py-8 lg:py-10">
		<div class="space-y-1.5">
			<h1 class="text-xl font-bold sm:text-2xl md:text-3xl">
				{m.page_contact_metadata_title()}
			</h1>
			<p class="text-sm text-muted-foreground">
				{m.page_contact_metadata_description()}
			</p>
		</div>
		<hr class="mb-8 mt-4 w-full">
		<div class="mx-auto sm:w-[540px]">
			<ContactForm client:load/>
		</div>
	</section>
	<SiteFooter slot="footer"/>
</Layout>
