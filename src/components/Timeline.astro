---
import { getCollection } from "astro:content";
import { format } from "date-fns";
import Icons from "@/components/Icons";
import { Badge } from "@/components/ui/badge";
import { getLocale } from "@/paraglide/runtime";

const locale = getLocale();

const entries = await getCollection("experiences", ({ id }) =>
	id.startsWith(`${locale}/`),
);
const experiences = entries.sort(
	(a, b) => b.data.start.getTime() - a.data.start.getTime(),
);
---

<div class="relative mx-3">
	<div class="absolute inset-y-0 w-0.5 rounded-full bg-border"/>
	{experiences.map(
        ({data: { organization, title, description, start, end, tags }}) => (
            <div class="relative pb-16 pl-8 last:pb-0">
                <div class="-translate-x-1/2 absolute top-3 left-px size-3 rounded-full border-2 border-primary bg-background" />
                <div class="space-y-3">
                    <div class="flex items-center space-x-2">
                        <div class="flex size-10 items-center justify-center rounded-full bg-muted">
                            <Icons.building className="size-5 text-muted-foreground" />
                        </div>
                        <span class="font-medium">{organization}</span>
                    </div>
                    <div class="space-y-2">
                        <h3 class="font-semibold text-xl">{title}</h3>
                        <div class="flex items-center gap-2 text-sm">
                            <Icons.calendar className="size-4" />
                            <div class="space-x-1">
                                <span>{format(start, "yyyy-MM")}</span>
                                <span>-</span>
                                <span>{end ? format(end, "yyyy-MM") : "Present"}</span>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted-foreground text-sm sm:text-base">
                        {description}
                    </p>
                    <div class="flex flex-wrap gap-2">
                        {tags.map((tag) => (
                            <Badge
                                key={tag}
                                variant="secondary"
                                className="rounded-full"
                            >
                                {tag}
                            </Badge>
                        ))}
                    </div>
                </div>
            </div>
        ),
    )}
</div>
